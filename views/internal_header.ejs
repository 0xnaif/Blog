<div class = "header">
    <% if (showLink) { %>
        <a href = "./">MyBlog</a>
    <% } else { %>
        <h3>MyBlog</h3>
    <% } %>
    <div class = "nav">
        <% if (showSearch) { %>
            <div class="search">
                <input type = "password" style = "display:none;">
                <i class = "fa-solid fa-magnifying-glass"></i>
                <input id = "searchPost" type = "search" placeholder = "Search" autocomplete = "off" onchange = "searchPost()">
            </div>
        <% } %>
        <div class = "user">
            <div onclick = "showUserProf()">
                <i class="fa-solid fa-user"></i>
            </div>
            <div class = "info">
                <i class = "fa-regular fa-circle-xmark"  onclick = "hideUserProf()"></i>
                <div class = "user-icon">
                    <i class="fa-solid fa-user"></i>
                </div>
                <div class = "back" onclick = "back()">
                    <i class="fa-solid fa-angle-left"></i>
                    <span>Back</span>
                </div>
                <div class="options">
                    <div class = "email-choice" onclick = "showEmail(this)">
                        <span>Email</span>
                        <i class="fa-solid fa-angle-right"></i>
                    </div>
                    <div class = "password-choice" onclick = "showPassword(this)">
                        <span>Change password</span>
                        <i class="fa-solid fa-angle-right"></i>
                    </div>
                </div>
                <div class = "email">
                    <label for = "">Email</label>
                    <input type = "text" name = "" id = "" placeholder = "user@gmail.com" disabled>
                </div>
                <div class = "password">
                    <div class = "pass current">
                        <label for = "">Current Passowrd</label>
                        <input type = "password" name = "currentPassword" id = "currentPassword">
                        <i id = "currentPasswordIcon" class = "toggle-password fa-regular fa-eye-slash" onclick = "togglePasswordVisibility('currentPassword', 'currentPasswordIcon')"></i>
                    </div>
                    <div class = "pass new">
                        <label for = "">New Passowrd</label>
                        <input type = "password" name = "newPassword" id = "newPassword" disabled>
                        <i id = "newPasswordIcon" class = "toggle-password fa-regular fa-eye-slash" onclick = "togglePasswordVisibility('newPassword', 'newPasswordIcon')"></i>
                    </div>
                    <div class = "pass confirm">
                        <label for = "">Confirm Passowrd</label>
                        <input type = "password" name = "confirmPassword" id = "confirmPassword" disabled>
                        <i id = "confirmPasswordIcon" class = "toggle-password fa-regular fa-eye-slash" onclick = "togglePasswordVisibility('confirmPassword', 'confirmPasswordIcon')"></i>
                    </div>
                    <input type = "submit" value = "Verify" onclick = "back()">
                </div>
                <div class = "log-out">
                    <p onclick = "showConfirm('confirm')">Log out</p>
                    <i class = "fa-solid fa-arrow-right-from-bracket" onclick = "showConfirm('confirm')"></i>
                    <div class = "confirm">
                        <div class = "confrim-icon">
                            <i class="fa-regular fa-circle-question"></i>
                        </div>
                        <p>Are you sure to logout?</p>
                        <div>
                            <button type = "submit"><a href = "./signin">Yes</a></button>
                            <button type = "submit" onclick = "hideConfirm('confirm')">No</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>