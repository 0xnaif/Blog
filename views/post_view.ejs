    <div id = "overlay"></div>
    <div class = "header">
        <a href = "./home">MyBlog</a>
        <div class = "nav">
            <div class = "user">
                <div onclick = "showUserProf()">
                    <i class="fa-solid fa-user"></i>
                </div>
                <div class = "info">
                    <i class = "fa-regular fa-circle-xmark"  onclick = "hideUserProf()"></i>
                    <div class = "user-icon">
                        <i class="fa-solid fa-user"></i>
                    </div>
                    <div class = "back" onclick = "back()">
                        <i class="fa-solid fa-angle-left"></i>
                        <span>Back</span>
                    </div>
                    <div class="options">
                        <div class = "email-choice" onclick = "showEmail(this)">
                            <span>Email</span>
                            <i class="fa-solid fa-angle-right"></i>
                        </div>
                        <div class = "password-choice" onclick = "showPassword(this)">
                            <span>Change password</span>
                            <i class="fa-solid fa-angle-right"></i>
                        </div>
                    </div>
                    <div class = "email">
                        <label for = "">Email</label>
                        <input type = "text" name = "" id = "" placeholder = "user@gmail.com" disabled>
                    </div>
                    <div class = "password">
                        <label for = "">Passowrd</label>
                        <input type = "password" name = "password" id = "password">
                        <i class = "toggle-password fa-regular fa-eye-slash" onclick = "togglePasswordVisibility()"></i>
                        <input type = "submit" value = "Save" onclick = "back()">
                    </div>
                    <div class = "log-out">
                        <p onclick = "showConfirm('confirm')">Log out</p>
                        <i class = "fa-solid fa-arrow-right-from-bracket" onclick = "showConfirm('confirm')"></i>
                        <div class = "confirm">
                            <div class = "confrim-icon">
                                <i class="fa-regular fa-circle-question"></i>
                            </div>
                            <p>Are you sure to logout?</p>
                            <div>
                                <button type = "submit"><a href = "./sign-in">Yes</a></button>
                                <button type = "submit" onclick = "hideConfirm('confirm')">No</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
