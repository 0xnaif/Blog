<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel = "stylesheet" href = "styles/all.min.css">
    <link rel = "stylesheet" href =  "styles/normalize.css">
    <link rel = "stylesheet" href = "styles/new-post.css">
    <link rel = "stylesheet" href = "styles/internal_header.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@200;300;400;500;600;700;800&family=Inter:wght@300;400;500;600;700&family=Rubik:ital,wght@0,300;0,500;0,600;0,700;0,800;0,900;1,400&display=swap" rel = "stylesheet">
    <title>New Post</title>
</head>
<body>
    <div id = "overlay"></div>
    <%- include("internal_header.ejs", {showLink : true, showSearch : false})%>
    <div class = "main">
       <div class="post">
            <h3>New Post</h3>
            <form id = "new-post" action = "./new-post" method = "post">
                <div>
                    <label for = "title">Title</label>
                    <input type = "text" name = "title" id = "title">
                </div>
                <div>
                    <label for = "post">Post</label>
                    <div id = "editorContainer">
                        <div id = "toolbar">
                            <div class = "text-format">
                                <button type = "button" onclick = "applyCommand('bold')">
                                    <i class="fa-solid fa-bold"></i>
                                </button>
                                <button type = "button" onclick = "applyCommand('underline')">
                                    <i class="fa-solid fa-underline"></i>
                                </button>
                                <button type = "button" onclick = "applyCommand('italic')">
                                    <i class="fa-solid fa-italic"></i>
                                </button>
                            </div>
                            <div class = "font-size">
                                <select id = "fontSizeSelect" onchange = "changeFontSize(this.value)">
                                    <option value = "12px">12 px</option>
                                    <option value = "14px" selected>14 px</option>
                                    <option value = "16px">16 px</option>
                                    <option value = "18px">18 px</option>
                                    <option value = "24px">24 px</option>
                                    <option value = "32px">32 px</option>
                                    <option value = "48px">48 px</option>
                                </select>
                            </div>
                            <div class="text-align">
                                <button type = "button" onclick = "applyCommand('justifyLeft')">
                                    <i class="fa-solid fa-align-left"></i>
                                </button>
                                <button type = "button" onclick = "applyCommand('justifyCenter')">
                                    <i class="fa-solid fa-align-center"></i>
                                </button>
                                <button type = "button" onclick = "applyCommand('justifyRight')">
                                    <i class="fa-solid fa-align-right"></i>
                                </button>
                            </div>  
                            <div class = "media">
                                <i class="fa-regular fa-image"></i>
                            </div>
                        </div>
                        <div id = "editor" contenteditable = "true" dir="auto"></div>
                    </div>
                </div>
                <div>
                    <input type = "submit" value = "Post" name = "post">
                    <button type = "submit" id = "backButton">Back</button>
                </div>
            </form>
       </div>
       <%- include("response.ejs") %>
    </div>
    <div class = "footer">
        <h3>MyBlog</h3>
        <p>Copyright &copy; for 0xnaif</p>
    </div>
    <script src = "./new-post.js"></script>
</body>
</html>